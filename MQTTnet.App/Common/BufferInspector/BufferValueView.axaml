<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="MQTTnet.App.Common.BufferInspector.BufferValueView">
  <Grid Margin="0,0,0,5">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" SharedSizeGroup="Column0" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Label Grid.Column="0" Content="{Binding Name, FallbackValue=NAME}" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Consolas" />
    <TextBox Grid.Column="1" Text="{Binding Value, FallbackValue=VALUE}" VerticalContentAlignment="Center" IsReadOnly="True" FontFamily="Consolas" />
  </Grid>
</UserControl>
